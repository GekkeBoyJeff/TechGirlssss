<form action="/Welcome" method="post">
    <legend>Are you a morning bird or a night owl?</legend>
    <fieldset>
        <input type="radio" id="morning" name="activeTime" value="morning">
        <label for="morning">Morning bird</label>
        <input type="radio" id="night" name="activeTime" value="night">
        <label for="night">Night owl</label>
    </fieldset>
    <fieldset>
        <legend>Are you a social butterfly or a cozy bookworm</legend>
        <input type="radio" id="social" name="social" value="Extravert">
        <label for="social">Social butterfly <span>Extravert</span></label>
        <input type="radio" id="bookworm" name="social" value="Introvert">
        <label for="bookworm">Cozy bookworm <span>Introvert</span></label>
    </fieldset>
</form>