<section class="formStep">
    <h1>What Makes You <span>Go 'Wowwww'?</span></h1>
    <form action="/welcome" method="post">

        <fieldset class="radio-toolbar">
            <legend><h2>What's your go-to music vibe?</h2></legend>

            <input type="checkbox" id="pop" name="musicStyle" value="pop">
            <label for="pop">Pop</label>

            <input type="checkbox" id="rock" name="musicStyle" value="rock">
            <label for="rock">Rock</label>

            <input type="checkbox" id="hiphop" name="musicStyle" value="hiphop">
            <label for="hiphop">Hip-hop/Rap</label>

            <input type="checkbox" id="electronic" name="musicStyle" value="electronic">
            <label for="electronic">Electronic/Dance</label>

            <input type="checkbox" id="rnb" name="musicStyle" value="rnb">
            <label for="rnb">R&B/Soul</label>

            <input type="checkbox" id="techno" name="musicStyle" value="techno">
            <label for="techno">Techno</label>

            <input type="checkbox" id="jazz" name="musicStyle" value="jazz">
            <label for="jazz">Jazz</label>

            <input type="checkbox" id="classical" name="musicStyle" value="classical">
            <label for="classical">Classical</label>

            <input type="checkbox" id="country" name="musicStyle" value="country">
            <label for="country">Country</label>

            <input type="checkbox" id="reggae" name="musicStyle" value="reggae">
            <label for="reggae">Reggae</label>

            <input type="checkbox" id="indie" name="musicStyle" value="indie">
            <label for="indie">Indie</label>

            <input type="checkbox" id="alternative" name="musicStyle" value="alternative">
            <label for="alternative">Alternative</label>
        </fieldset>

        <div>
            <button type="submit" id="backButton" name="action" value="back">Back</button>
            <button type="submit">Next</button>
        </div>
    </form>

        <video autoplay loop muted>
            <source src="../images/shadergradient.webm" type="video/webm">
            <!-- Voeg alternatieve bronnen toe voor verschillende videoformaten -->
        </video>
</section>
