            <label for="inspiration">inspiration</label>
            <input type="checkbox" id="newExperiences" name="wantToDiscover" value="newExperiences">
            <label for="newExperiences">New experiences</label>
            <input type="checkbox" id="newHobby" name="wantToDiscover" value="newHobby">
            <label for="newHobby">A new hobby</label>
