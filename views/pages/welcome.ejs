<section>
  <% if (user.currentStep === 0) { %>
    <h1>We want to get to know you!</h1>
    <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Magnam cumque quaerat similique voluptate vero totam sit rerum alias? Labore dolores natus quo, dolorum exercitationem dicta.</p>
    <form action="/Welcome" method="post">
        <button type="submit">Set up your account</button>
    <% } %>

  <% if (user.currentStep === 1) { %>
    <h1>Welcome <%= user.name %></h1>
    <form action="/Welcome" method="post">
        <fieldset>
            <label for="age">Hi, my name is <span><% user.name %></span>, I'm </label>
            <input type="number" id="age" name="age">
            <label for="age">years old.</label>
        </fieldset>
        <fieldset>
            <label for="country">I live in</label>
            <input type="text" id="country" name="country">
            <label for="language">and I speak</label>
            <input type="text" id="language" name="language">
        </fieldset>
        <button type="submit">Next</button>
    </form>
    <% } %>
  <% if (user.currentStep === 2) { %>
    <form action="/Welcome" method="post">
        <legend>Are you a morning bird or a night owl?</legend>
        <fieldset>
            <input type="radio" id="morning" name="activeTime" value="morning">
            <label for="morning">Morning bird</label>
            <input type="radio" id="night" name="activeTime" value="night">
            <label for="night">Night owl</label>
        </fieldset>
        <fieldset>
            <legend>Are you a social butterfly or a cozy bookworm</legend>
            <input type="radio" id="social" name="social" value="Extravert">
            <label for="social">Social butterfly <span>Extravert</span></label>
            <input type="radio" id="bookworm" name="social" value="Introvert">
            <label for="bookworm">Cozy bookworm <span>Introvert</span></label>
        </fieldset>
    </form>
    <% } %>
  <% if (user.currentStep === 3) { %>
    <h1></h1>
    <form action="/Welcome" method="post"> 
        <fieldset>
            <label for="wantToDiscover">What are you hoping to discover?</label>
